# Bastion Protocol Environment Variables

# ================================
# Deployment Configuration
# ================================

# Private key for deployment (NEVER commit the actual .env file!)
PRIVATE_KEY=your_private_key_here

# RPC URLs
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_MAINNET_RPC_URL=https://mainnet.base.org
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Block Explorer API Keys (for verification)
BASESCAN_API_KEY=your_basescan_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# ================================
# Contract Addresses (Optional)
# ================================

# If using existing PoolManager (e.g., official Uniswap V4 deployment)
POOL_MANAGER=0x0000000000000000000000000000000000000000

# Insurance Tranche (set after deployment)
INSURANCE_TRANCHE=0x0000000000000000000000000000000000000000

# ================================
# EigenLayer AVS Addresses
# ================================

# EigenLayer core contracts (mainnet/testnet specific)
AVS_DIRECTORY=0x0000000000000000000000000000000000000000
REGISTRY_COORDINATOR=0x0000000000000000000000000000000000000000
STAKE_REGISTRY=0x0000000000000000000000000000000000000000

# ================================
# Operator Configuration
# ================================

# Operator private key (separate from deployer)
OPERATOR_PRIVATE_KEY=your_operator_private_key

# Chainlink oracle addresses (for depeg detection)
CHAINLINK_STETH_USD=0x0000000000000000000000000000000000000000
CHAINLINK_ETH_USD=0x0000000000000000000000000000000000000000

# ================================
# Frontend Configuration
# ================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Network RPC URLs (public)
NEXT_PUBLIC_BASE_SEPOLIA_RPC=https://sepolia.base.org
NEXT_PUBLIC_MAINNET_RPC=https://eth.llamarpc.com

# ================================
# Optional: Deployment Flags
# ================================

# Skip mock token deployment (use real tokens)
SKIP_MOCK_TOKENS=false

# Deploy to specific network
DEPLOY_NETWORK=base-sepolia

# Verbose logging
DEBUG=true
